



<div id="cont">
    <div class="container" id="cont2">
        <div class="title">Patient Data</div>
        <form action="/action_page_2" method="POST">
            <div class="userinfo">
            
                <div class="input">
                    <div class="details">Period</div>
                    <div class="selecto">
                        <select name="period" id="slt-1">
                            <option>Choose An Option</option>


<% if(!rooms.includes(1)) {%>
                                <option value="1">First Period(12-2 AM)</option>
                             <% } %> 
<% if(!rooms.includes(2)) {%>
                            <option value="2">Second Period(2-4 AM)</option>
                             <% } %> 
<% if(!rooms.includes(3)) {%>
                            <option value="3">Third Period(4-6 AM)</option>
                             <% } %> 
<% if(!rooms.includes(4)) {%>
                            <option value="4">Fouth Period(6-8 AM)</option>
                             <% } %> 
<% if(!rooms.includes(5)) {%>
                            <option value="5">Fifth Period(8-10 AM)</option>
                             <% } %> 
<% if(!rooms.includes(6)) {%>
                            <option value="6">Sixth Period(10-12 AM)</option>
                             <% } %> 
<% if(!rooms.includes(7)) {%>
                            <option value="7">Seventh Period(12-2 PM)</option>
                             <% } %> 
<% if(!rooms.includes(8)) {%>
                            <option value="8">Eighth Period(2-4 PM)</option>
                             <% } %> 
<% if(!rooms.includes(9)) {%>
                            <option value="9">Ninth Period(4-6 PM)</option>
                             <% } %> 
<% if(!rooms.includes(10)) {%>
                            <option value="10">Tenth Period(6-8 PM)</option>
                             <% } %> 
<% if(!rooms.includes(11)) {%>
                            <option value="11">Eleventh Period(8-10 PM)</option>
                             <% } %> 
<% if(!!rooms.includes(12)) {%>
                            <option value="12">Twelfth Period(10-12 PM)</option>
                            <% } %> 
                        </select>
                    </div>
                </div>
                
                
            </div>

            <div class="button">
                <a href="#" target="_self"><input type="submit" value="Save"></a>
            </div>
        </form>
    </div>
</div>
<script>
    

    document.querySelector('.select-field').addEventListener('click',()=>{
        document.querySelector('.list').classList.toggle('show');
        document.querySelector('.down-arrow').classList.toggle('rotate180');

    });
</script>